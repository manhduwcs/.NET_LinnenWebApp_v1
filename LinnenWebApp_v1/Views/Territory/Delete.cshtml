@model LinnenWebApp_v1.Models.Territory

@{
    ViewData["Title"] = "Delete Territory";
}

<h1>Delete Territory</h1>

<h4>Are you sure you want to delete this territory?</h4>
<div>
    <h4>Territory Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Territory ID</dt>
        <dd class="col-sm-10">@Model.TerritoryID</dd>

        <dt class="col-sm-2">Territory Description</dt>
        <dd class="col-sm-10">@Model.TerritoryDescription</dd>

        <dt class="col-sm-2">Region ID</dt>
        <dd class="col-sm-10">@Model.RegionID</dd>

        <dt class="col-sm-2">Region Description</dt>
        <dd class="col-sm-10">@Model.RegionDescription</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TerritoryID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>