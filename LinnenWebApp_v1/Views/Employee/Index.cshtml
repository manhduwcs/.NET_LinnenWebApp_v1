@model List<LinnenWebApp_v1.Models.Employee>

@{
    // Random colors for column backgrounds
    var randomColors = new[]
    {
        "#FFDDC1", "#FFABAB", "#FFC3A0", "#FF677D", "#D4A5A5",
        "#392F5A", "#F0F0F0", "#F9FBCB", "#B9FBC0", "#A0E7E2"
    };
}

<h2>--- Employee List ---</h2>

<table border="1" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr>
            <th style="width: 15%; background-color: @randomColors[0]; text-align: center;">First Name</th>
            <th style="width: 15%; background-color: @randomColors[1]; text-align: center;">Last Name</th>
            <th style="width: 15%; background-color: @randomColors[2]; text-align: center;">Title</th>
            <th style="width: 15%; background-color: @randomColors[3]; text-align: center;">City</th>
            <th style="width: 15%; background-color: @randomColors[4]; text-align: center;">Country</th>
            <th style="width: 15%; background-color: @randomColors[5]; color:white;  text-align: center;">Home Phone</th>
            <th style="width: 10%; background-color: @randomColors[6]; text-align: center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var employee in Model)
            {
                <tr>
                    <td style="background-color: @randomColors[0]; text-align: center;">@employee.FirstName</td>
                    <td style="background-color: @randomColors[1]; text-align: center;">@employee.LastName</td>
                    <td style="background-color: @randomColors[2]; text-align: center;">@employee.Title</td>
                    <td style="background-color: @randomColors[3]; text-align: center;">@employee.City</td>
                    <td style="background-color: @randomColors[4]; text-align: center;">@employee.Country</td>
                    <td style="background-color: @randomColors[5]; color: white; text-align: center;">@employee.HomePhone</td>
                    <td style="background-color: @randomColors[6]; text-align: center;">
                        @Html.ActionLink("Edit", "EditEmployee", "Employee", new { id = employee.EmployeeID }, null) |
                        @Html.ActionLink("Delete", "DeleteEmployee", "Employee", new { id = employee.EmployeeID }, new { onclick = "return confirm('Are you sure you want to delete this employee?');" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="text-align: center;">No employees available.</td>
            </tr>
        }
    </tbody>
</table>