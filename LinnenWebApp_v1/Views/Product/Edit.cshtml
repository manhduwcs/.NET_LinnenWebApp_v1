@model Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "_Layout";

}

<div class="container mt-4">
    <h1>Edit Product</h1>

    <form asp-action="Edit">
        <input type="hidden" asp-for="ProductID" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Validation summary -->

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span> <!-- Validation for ProductName -->
        </div>

        <div class="mb-3">
            <label asp-for="SupplierID" class="form-label">Supplier's CompanyName</label>
            <select asp-for="SupplierID" class="form-select"
                asp-items="@(new SelectList(ViewBag.Suppliers, "SupplierID", "CompanyName"))"></select>
            <span asp-validation-for="SupplierID" class="text-danger"></span> <!-- Validation for SupplierID -->
        </div>

        <div class="mb-3">
            <label asp-for="CategoryID" class="form-label">Category's CategoryName</label>
            <select asp-for="CategoryID" class="form-select"
                asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"))"></select>
            <span asp-validation-for="CategoryID" class="text-danger"></span> <!-- Validation for CategoryID -->
        </div>

        <div class="mb-3">
            <label asp-for="QuantityPerUnit" class="form-label">Quantity Per Unit</label>
            <input asp-for="QuantityPerUnit" class="form-control" />
            <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
            <!-- Validation for QuantityPerUnit -->
        </div>

        <div class="mb-3">
            <label asp-for="UnitPrice" class="form-label">Unit Price</label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span> <!-- Validation for UnitPrice -->
        </div>

        <div class="mb-3">
            <label asp-for="UnitsInStock" class="form-label">Units In Stock</label>
            <input asp-for="UnitsInStock" class="form-control" />
            <span asp-validation-for="UnitsInStock" class="text-danger"></span> <!-- Validation for UnitsInStock -->
        </div>

        <div class="mb-3">
            <label asp-for="UnitsOnOrder" class="form-label">Units On Order</label>
            <input asp-for="UnitsOnOrder" class="form-control" />
            <span asp-validation-for="UnitsOnOrder" class="text-danger"></span> <!-- Validation for UnitsOnOrder -->
        </div>

        <div class="mb-3">
            <label asp-for="ReorderLevel" class="form-label">Reorder Level</label>
            <input asp-for="ReorderLevel" class="form-control" />
            <span asp-validation-for="ReorderLevel" class="text-danger"></span> <!-- Validation for ReorderLevel -->
        </div>

        <div class="mb-3">
            <label asp-for="Discontinued" class="form-label">Discontinued</label>
            <input type="checkbox" asp-for="Discontinued" value="true" class="" />
            <span asp-validation-for="Discontinued" class="text-danger"></span> <!-- Validation for Discontinued -->
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>