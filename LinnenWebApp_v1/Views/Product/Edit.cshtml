@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-4">
    <h1>Edit Product</h1>

    <form asp-action="Edit">
        <input type="hidden" asp-for="ProductID" />
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="SupplierID" class="form-label"></label>
            <select asp-for="SupplierID" class="form-select" asp-items="@(new SelectList(ViewBag.Suppliers, "SupplierID", "CompanyName"))"></select>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryID" class="form-label"></label>
            <select asp-for="CategoryID" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"))"></select>
        </div>
        <div class="mb-3">
            <label asp-for="UnitPrice" class="form-label"></label>
            <input asp-for="UnitPrice" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>