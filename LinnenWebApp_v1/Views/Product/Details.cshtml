@model Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "_Layout";

}

<h1>Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductName
        </dd>
        <dt class = "col-sm-2">
            Supplier
        </dt>
        <dd class = "col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class = "col-sm-2">
            Unit Price
        </dt>
        <dd class = "col-sm-10">
            @Model.UnitPrice
        </dd>
        <!-- Add other fields as necessary -->
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>