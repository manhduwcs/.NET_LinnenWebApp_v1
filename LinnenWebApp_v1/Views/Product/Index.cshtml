@model List<Product>

@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";

}

<div class="container mt-4">
    <h1>Products</h1>
    <a class="btn btn-primary mb-3" asp-action="Create">Create New Product</a>

    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Supplier</th>
                <th>Category</th>
                <th>Unit Price</th>
                <th>Quantity Per Unit</th>
                <th>Units In Stock</th>
                <th>Units On Order</th>
                <th>Reorder Level</th>
                <th>Discontinued</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.CompanyName</td>
                    <td>@item.CategoryName</td>
                    <td>@item.UnitPrice.ToString("C")</td>  
                    <td>@item.QuantityPerUnit</td>
                    <td>@item.UnitsInStock</td>
                    <td>@item.UnitsOnOrder</td>
                    <td>@item.ReorderLevel</td>
                    <td>@(item.Discontinued ? "Yes" : "No")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ProductID">Details</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ProductID">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>