@model LinnenWebApp_v1.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "_Layout";
}

<h1>Delete Product</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductName
        </dd>
        <dt class = "col-sm-2">
            Supplier
        </dt>
        <dd class = "col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Model.CategoryName
        </dd>
        <!-- Add other fields as necessary -->
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit">Delete</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>