@model LinnenWebApp_v1.Models.User

@{

}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-4">
        <h1>Edit User</h1>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserID" value=@Model.UserID />
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" value=@Model.Username />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" value=@Model.Password />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" value=@Model.Description />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @{
                    if (Model.EmployeeID != -1)
                    {
                        <label asp-for="EmployeeID" class="form-label"></label>
                        <input asp-for="EmployeeID" class="form-control" readonly value=@Model.EmployeeID />
                        <span asp-validation-for="EmployeeID" class="text-danger"></span>

                    }
                    else
                    {
                        <label asp-for="EmployeeID" class="form-label"></label>
                        <input asp-for="EmployeeID" class="form-control" readonly value="N/A" />
                        <span asp-validation-for="EmployeeID" class="text-danger"></span>

                    }
                }
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </form>
    </div>
</body>

</html>