@model LinnenWebApp_v1.Models.User

@{
    Layout = "_Layout";
}


    <div class="container mt-4">
        <h1>Edit User</h1>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="UserID" value=@Model.UserID />
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" value=@Model.Username required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" value=@Model.Password required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" value=@Model.Description />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EmployeeID" class="form-label"></label>
                @{
                    if(Model.EmployeeID != -1){
                        <input asp-for="EmployeeID" class="form-control" readonly value=@Model.EmployeeID />
                    }
                    else{
                        <input asp-for="EmployeeID" class="form-control" readonly value="N/A" />
                    }
                }
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </form>
    </div>
