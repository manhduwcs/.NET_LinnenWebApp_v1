@model List<LinnenWebApp_v1.Models.User>

@{
    int count = Model.Count();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">    
<style>
    .table-responsive {
        overflow-x: auto;
    }
</style>
</head>
<body>
    <div class="container">
        <h1 class="">User List</h1>
        <p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>UserID</th>
                        <th>Username</th>
                        <th>Description</th>
                        <th>EmployeeID</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            @{
                                <td>@count</td>
                                count = count - 1;
                            }
                            <td>
                                @item.Username
                            </td>
                            <td>
                                @item.Description
                            </td>
                            @{
                                if(item.EmployeeID != -1){
                                    <td>@item.EmployeeID</td>
                                }
                                else{
                                    <td>N/A</td>
                                }
                            }
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-warning btn-sm" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-info btn-sm" }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>