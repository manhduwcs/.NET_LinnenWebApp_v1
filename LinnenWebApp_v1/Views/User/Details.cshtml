@model LinnenWebApp_v1.Models.User

@{
    ViewData["Title"] = "User Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h1>User Details</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Username: @Model.Username</h5>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                @{
                    if(Model.EmployeeID != -1){
                        <p class="card-text"><strong>Employee ID:</strong> @Model.EmployeeID</p>
                    }
                    else{
                        <p class="card-text"><strong>Employee ID:</strong> N/A</p>
                    }
                }
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.UserID">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.UserID">Delete</a>
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>